            <TextView android:textSize="@dimen/sp_10" android:textColor="@color/color_F1F5F8" android:id="@+id/tv_portrait_hot" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_3" android:text="@string/app_name" android:maxLines="1" android:scrollHorizontally="true" android:layout_below="@id/tv_portrait_name" android:marqueeRepeatLimit="marquee_forever" />
            <TextView android:textSize="@dimen/sp_10" android:textColor="@color/color_F1F5F8" android:id="@+id/tv_portrait_room_id" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_15" android:layout_marginTop="@dimen/dp_3" android:text="@string/app_name" android:maxLines="1" android:scrollHorizontally="true" android:layout_toRightOf="@id/tv_portrait_hot" android:layout_below="@id/tv_portrait_name" android:marqueeRepeatLimit="marquee_forever" />
