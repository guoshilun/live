<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/live_room_chat"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dp_44"
    android:background="@color/color_F1F5F8"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/cb_danmu"
        android:layout_width="@dimen/dp_47"
        android:layout_height="@dimen/dp_24"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@null"
        android:button="@drawable/cbox_danmu_selector" />

    <TextView
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/bg_ver_line" />

    <EditText
        android:id="@+id/et_bottom_msg"
        android:layout_width="@dimen/dp_172"
        android:layout_height="@dimen/dp_34"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.0"
        android:background="@null"
        android:gravity="center|left"
        android:hint="@string/live_room_msg_hint_for_broadcast_unopen"
        android:inputType="text"
        android:maxLength="50"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:text=""
        android:textColor="@color/color_999"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_E3E3E3" />

    <ImageView
        android:id="@+id/iv_live_bottom_emo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@drawable/btn_im_emoji_selector"
        android:visibility="gone" />

    <TextView
        android:id="@+id/btn_msg_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_marginRight="@dimen/dp_15"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/send_message"
        android:textColor="@color/color_999"
        android:textSize="@dimen/sp_16" />
</LinearLayout>