<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_333"
    android:layout_height="@dimen/dp_443"
    android:background="@drawable/bg_pk_dialog_round_white">

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:background="@drawable/bg_pk_dialog_top"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/icon_white_return"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_pk_record"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_46"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_12"
        android:gravity="center_vertical"
        android:text="开奖记录"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17" />

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:layout_below="@id/ll_1"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_7">

        <ImageView
            android:layout_width="@dimen/dp_43"
            android:layout_height="@dimen/dp_43"
            android:layout_marginLeft="@dimen/dp_52"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_game_gold_positive_select" />

        <ImageView
            android:layout_width="@dimen/dp_43"
            android:layout_height="@dimen/dp_43"
            android:layout_marginLeft="@dimen/dp_92"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_game_gold_reverse_unselect" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_below="@id/ll_2"
        android:layout_above="@id/iv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/iv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_pk_dialog_round_gary"
        android:gravity="center"
        android:text="关  闭"
        android:textColor="@color/color_FF5959"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold" />

</RelativeLayout>