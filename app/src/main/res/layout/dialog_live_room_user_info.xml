<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_345"
    android:layout_height="@dimen/dp_310"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/dp_15">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_267"
        android:layout_marginTop="42.5dip"
        android:background="@drawable/bg_live_room_white_btn">

        <ImageView
            android:id="@+id/iv_live_room_report"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@mipmap/live_icon_live_room_three_point" />

        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_62"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="5"
                android:maxLines="1"
                android:text="昵称"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/iv_user_sex"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_toRightOf="@id/tv_user_name"
                android:src="@mipmap/live_icon_my_female" />

            <TextView
                android:id="@+id/tv_user_level"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_toRightOf="@id/iv_user_sex"
                android:background="@drawable/bg_red_rount_btn"
                android:drawableLeft="@mipmap/live_icon_user_level"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_2"
                android:text="246"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_8" />

            <TextView
                android:id="@+id/tv_user_name_host"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_toRightOf="@id/tv_user_level"
                android:background="@drawable/bg_blue_btn"
                android:drawableLeft="@mipmap/live_icon_my_host_level"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_2"
                android:text="246"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_8" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_1"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/tv_user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="锦阔电竞号:00000000"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_user_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@id/tv_user_id"
                android:text="火星"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Ta好像忘记写签名了~"
            android:textColor="@color/color_999"
            android:textSize="@dimen/sp_10" />

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sign"
            android:layout_marginTop="@dimen/dp_25"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_follow_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="关注"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_fans_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="粉丝"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_diamond_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_diamond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="@string/str_diamond"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_gift_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="送礼"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </LinearLayout>

        <include
            android:id="@+id/line"
            layout="@layout/line"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/ll_2"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_13" />

        <LinearLayout
            android:id="@+id/ll_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="关注"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_Ta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/str_Ta"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_pri_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="私信"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_home_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="主页"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_6"
            android:layout_width="@dimen/dp_130"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_4"
            android:layout_alignRight="@id/ll_4"
            android:background="@drawable/bg_room_management"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_m1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_37"
                android:gravity="center"
                android:text="踢出房间"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_m2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_37"
                android:gravity="center"
                android:text="禁言"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_m4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_37"
                android:gravity="center"
                android:text="设为管理员"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_m3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_37"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </RelativeLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_live_room_header"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        fresco:actualImageScaleType="centerCrop"
        fresco:fadeDuration="300"
        fresco:placeholderImage="@mipmap/app_default_middle"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundAsCircle="true" />
</FrameLayout>