<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_white_round_btn"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_42"
        android:background="@color/tabSelectTextColor"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/str_login"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/icon_dialog_close" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_team_editor_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_old_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_login"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_new_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_old_name"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/str_new_nickname"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_team_name"
            android:layout_width="@dimen/dp_248"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@id/tv_old_name"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_28"
            android:layout_toRightOf="@id/tv_new_name"
            android:background="@drawable/bg_white_btn"
            android:gravity="center_vertical"
            android:hint="@string/str_team_editor"
            android:maxLength="6"
            android:minLines="1"
            android:paddingLeft="@dimen/dp_5"
            android:textColor="#ff666666"
            android:textSize="16.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_team_editor_init"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_17">

        <TextView
            android:id="@+id/tv_team_init"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_introduction"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_introduction_name_editor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_team_init"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_int"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_round_btn"
                android:hint="@string/str_team_editor"
                android:maxLength="61"
                android:minLines="4"
                android:textColor="#ff666666"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="18.0dip"
                android:layout_marginTop="@dimen/dp_16"
                android:text="0/60"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_dialog_amend"
        android:layout_width="@dimen/dp_130"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/bg_red_btn"
        android:gravity="center"
        android:text="@string/str_amend"
        android:textColor="@color/white" />
</LinearLayout>