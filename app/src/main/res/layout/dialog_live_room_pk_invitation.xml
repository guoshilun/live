<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_259"
    android:background="@drawable/bg_wheat_dialog_round_white">

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:background="@drawable/bg_pk_dialog_top"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_pk_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:drawableBottom="@drawable/bg_wheat_line"
            android:gravity="center_vertical"
            android:text="邀请中"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_19">

        <LinearLayout
            android:layout_width="@dimen/dp_68"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_header_1"
                android:layout_width="@dimen/dp_63"
                android:layout_height="@dimen/dp_63"
                android:scaleType="fitXY"
                fresco:actualImageScaleType="centerCrop"
                fresco:fadeDuration="300"
                fresco:placeholderImage="@mipmap/app_default_middle"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:roundAsCircle="true" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxEms="5"
                android:maxLines="1"
                android:text="@string/app_name"
                android:textColor="@color/color_646464"
                android:textSize="@dimen/sp_11"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_user_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="JK账号:12345678"
                android:textColor="@color/color_999"
                android:textSize="@dimen/sp_8"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_user_level"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_14"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@id/iv_sex"
                android:background="@drawable/bg_red_rount_btn"
                android:drawableLeft="@mipmap/live_icon_host_level"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_2"
                android:text="246"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_8"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_65"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:gravity="center">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_header_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                fresco:actualImageScaleType="centerCrop"
                fresco:fadeDuration="300"
                fresco:placeholderImage="@mipmap/app_default_middle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_68"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_header_3"
                android:layout_width="@dimen/dp_63"
                android:layout_height="@dimen/dp_63"
                android:scaleType="fitXY"
                fresco:actualImageScaleType="centerCrop"
                fresco:fadeDuration="300"
                fresco:placeholderImage="@mipmap/app_default_middle"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:roundAsCircle="true" />

            <TextView
                android:id="@+id/tv_name_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxEms="5"
                android:maxLines="1"
                android:text="@string/app_name"
                android:textColor="@color/color_646464"
                android:textSize="@dimen/sp_11"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_user_id_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="JK账号:12345678"
                android:textColor="@color/color_999"
                android:textSize="@dimen/sp_8"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_user_level_3"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_14"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@id/iv_sex"
                android:background="@drawable/bg_red_rount_btn"
                android:drawableLeft="@mipmap/live_icon_host_level"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_2"
                android:text="246"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_8"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15"
        android:text="10s"
        android:textColor="@color/color_969696"
        android:textSize="@dimen/sp_10"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_12"
        android:text="正在等待好友确认"
        android:textColor="@color/color_969696"
        android:textSize="@dimen/sp_10"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_42"
        android:layout_below="@id/tv_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/bg_pk_round_btn"
        android:gravity="center"
        android:text="发起PK"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold" />
</RelativeLayout>