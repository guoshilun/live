<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_259"
    android:background="@drawable/bg_wheat_dialog_round_white">

    <RelativeLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:background="@drawable/bg_pk_dialog_top"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_pk_record"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:drawableBottom="@drawable/bg_wheat_line"
            android:gravity="center_vertical"
            android:text="PK记录"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <TextView
            android:layout_width="@dimen/dp_47"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/tv_pk_record"
            android:layout_marginLeft="@dimen/dp_12"
            android:background="@drawable/bg_wheat_line" />
    </RelativeLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_46"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/icon_pk_dialog_img" />

    <ImageView
        android:id="@+id/iv_rules"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_14"
        android:src="@mipmap/icon_pk_rules" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_pk_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_1" />

</RelativeLayout>