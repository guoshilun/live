<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_443"
    android:background="@drawable/bg_wheat_dialog_round_white">

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:background="@drawable/bg_pk_dialog_top"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/icon_white_return" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_pk_record"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_46"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_12"
        android:gravity="center_vertical"
        android:text="PK记录"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17" />

    <include
        layout="@layout/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_pk_record" />
</RelativeLayout>