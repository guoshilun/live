<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/titlebar_title_layout" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_44"
        android:background="@color/color_F1F5F8"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_25"
        android:text="消息开关"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@id/tv_1"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="系统消息"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_16" />

        <CheckBox
            android:id="@+id/cb_system"
            android:layout_width="@dimen/dp_33"
            android:layout_height="@dimen/dp_18"
            android:background="@null"
            android:button="@drawable/cbox_close_open_selector" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@id/ll_1"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="关注消息"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_16" />

        <CheckBox
            android:id="@+id/cb_follow"
            android:layout_width="@dimen/dp_33"
            android:layout_height="@dimen/dp_18"
            android:background="@null"
            android:button="@drawable/cbox_close_open_selector" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@id/ll_2"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="开播提示"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_16" />

        <CheckBox
            android:id="@+id/cb_open_live"
            android:layout_width="@dimen/dp_33"
            android:layout_height="@dimen/dp_18"
            android:background="@null"
            android:button="@drawable/cbox_close_open_selector"
            android:checked="true" />
    </LinearLayout>
</RelativeLayout>