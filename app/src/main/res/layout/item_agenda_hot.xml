<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item"
    android:layout_width="@dimen/dp_165"
    android:layout_height="@dimen/dp_140"
    android:background="@drawable/bg_white_round_btn">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_hot_bg"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_weight="1.0"
        android:gravity="center"
        android:scaleType="fitXY"
        fresco:actualImageScaleType="centerCrop"
        fresco:fadeDuration="300"
        fresco:placeholderImage="@mipmap/icon_hot_defult"
        fresco:placeholderImageScaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_game_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/bg_red_btn"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="@string/str_hero_alliance"
        android:textColor="@color/white"
        android:textSize="@dimen/text_10sp" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_40"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="@string/str_hero_alliance"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_user_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_40"
        android:drawableLeft="@mipmap/icon_user_count"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="@string/str_hero_alliance"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/iv_hot_bg"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="@string/action_sign_in"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>