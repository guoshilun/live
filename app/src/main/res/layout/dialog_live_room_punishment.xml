<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_333"
    android:layout_height="@dimen/dp_220"
    android:background="@drawable/bg_pk_dialog_round_white">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:background="@mipmap/icon_wheat_dialog_top"
        android:gravity="center"
        android:text="断开连接"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="你确定要断开连接吗？"
        android:textColor="@color/color_666"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_27"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="@dimen/dp_67"
            android:layout_height="@dimen/dp_31"
            android:background="@drawable/bg_wheat_refused"
            android:gravity="center"
            android:text="取  消"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="@dimen/dp_67"
            android:layout_height="@dimen/dp_31"
            android:layout_marginLeft="@dimen/dp_99"
            android:background="@drawable/bg_pk_invitation"
            android:gravity="center"
            android:text="确   定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>