<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_260"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_19"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_for_pking"
        android:gravity="center">

        <ImageView
            android:id="@+id/im_pk_status_vs"
            android:layout_width="@dimen/dp_33"
            android:layout_height="@dimen/dp_19"
            android:layout_marginLeft="@dimen/dp_2"
            android:background="@mipmap/icon_pk_dialog_img"
            android:scaleType="fitXY"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_pk_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_6"
            android:text="惩罚"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            android:visibility="gone" />

        <cn.iwgang.countdownview.CountdownView
            android:id="@+id/pk_countdown"
            android:layout_width="@dimen/dp_31"
            android:layout_height="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_5"
            app:isShowDay="false"
            app:isShowHour="false"
            app:isShowMillisecond="false"
            app:isShowMinute="true"
            app:isShowSecond="true"
            app:suffixGravity="center"
            app:suffixLRMargin="1.0sp"
            app:suffixTextColor="@color/white"
            app:suffixTextSize="@dimen/sp_13"
            app:timeTextColor="@color/white"
            app:timeTextSize="@dimen/sp_13" />
    </LinearLayout>

    <ImageView
        android:id="@+id/im_pk_status"
        android:layout_width="@dimen/dp_19"
        android:layout_height="@dimen/dp_19"
        android:layout_marginLeft="@dimen/dp_2"
        android:layout_toRightOf="@id/ll_1"
        android:src="@mipmap/live_icon_room_close" />

    <TextView
        android:id="@+id/tv_pk_countdown"
        android:layout_width="@dimen/dp_66"
        android:layout_height="@dimen/dp_66"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_86"
        android:background="@drawable/bg_pk_seek_round"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="5"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_52" />

    <TextView
        android:id="@+id/tv_to_a_game"
        android:layout_width="@dimen/dp_67"
        android:layout_height="@dimen/dp_31"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_151"
        android:background="@drawable/bg_pk_to_a_game"
        android:gravity="center"
        android:text="再来一局"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_pk_countdown"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_17"
        android:layout_below="@id/tv_pk_countdown"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_7"
        android:src="@mipmap/icon_pk_seek_start_countdown" />
</RelativeLayout>