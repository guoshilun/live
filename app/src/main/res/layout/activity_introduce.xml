<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/titlebar_title_layout" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_pic"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_78"
        android:scaleType="fitXY"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@mipmap/app_default_middle"
        fresco:roundedCornerRadius="@dimen/dp_15" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sdv_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_9"
        android:text="版本号1.0.0"
        android:textColor="@color/color_999"
        android:textSize="@dimen/sp_14" />

    <com.jk.jkproject.ui.widget.DrawerItemView
        android:id="@+id/div_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_below="@id/tv_version"
        android:layout_marginTop="@dimen/dp_45" />


    <com.jk.jkproject.ui.widget.DrawerItemView
        android:id="@+id/div_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/div_check"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_16" />

    <com.jk.jkproject.ui.widget.DrawerItemView
        android:id="@+id/div_agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_below="@id/div_action"
        android:layout_marginTop="@dimen/dp_16" />

    <com.jk.jkproject.ui.widget.DrawerItemView
        android:id="@+id/div_privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_below="@id/div_agreement"
        android:layout_marginTop="@dimen/dp_16" />
</RelativeLayout>