<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/live_main_top_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_size_44"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tab_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/live_top_esport"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_20"
            android:scaleType="centerInside"
            android:src="@mipmap/esport" />

        <ImageView
            android:id="@+id/live_top_crown"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:scaleType="centerInside"
            android:src="@mipmap/live_home_crown" />

        <ImageView
            android:id="@+id/live_top_search"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:scaleType="centerInside"
            android:src="@mipmap/live_home_search" />

        <ImageView
            android:id="@+id/live_top_message"
            android:layout_width="@dimen/dp_20"
            android:visibility="gone"
            android:layout_height="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_15"
            android:scaleType="centerInside"
            android:src="@mipmap/live_home_massage" />
    </LinearLayout>

    <com.jk.jkproject.ui.widget.CatonViewPager
        android:id="@+id/live_vp_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/live_main_top_title" />
</RelativeLayout>