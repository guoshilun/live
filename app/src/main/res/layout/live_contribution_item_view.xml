<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_78"
    android:layout_marginLeft="@dimen/dp_23"
    android:layout_marginRight="@dimen/dp_20"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_rank_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="04"
            android:textColor="@color/color_969696"
            android:textSize="@dimen/sp_13" />


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_header"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_toRightOf="@id/tv_rank_number"
            android:scaleType="fitXY"
            fresco:actualImageScaleType="centerCrop"
            fresco:fadeDuration="300"
            fresco:placeholderImage="@mipmap/app_default_middle"
            fresco:roundAsCircle="true" />


        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_toRightOf="@id/sdv_header">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="5"
                android:maxLines="1"
                android:text="sdhfsdfjlkdsjklflsdfk"
                android:textColor="@color/color_646464"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:id="@+id/tv_hot_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_user_name"
                android:layout_marginTop="@dimen/dp_7"
                android:text="238478234热度"
                android:textColor="@color/color_969696"
                android:textSize="@dimen/sp_10" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_user_level"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_14"
            android:layout_alignTop="@id/rl_1"
            android:layout_marginLeft="@dimen/dp_38"
            android:layout_toRightOf="@id/rl_1"
            android:background="@drawable/bg_red_rount_btn"
            android:drawableLeft="@mipmap/live_icon_user_level"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_2"
            android:text="246"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_8" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_host_type"
        android:layout_width="@dimen/dp_61"
        android:layout_height="@dimen/dp_26"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_43"
        android:background="@drawable/bg_contribution_item_line" />

</RelativeLayout>
