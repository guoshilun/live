<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jk.jkproject.ui.widget.NoScrollViewPager
        android:id="@+id/live_vp_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_big"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_365"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_use_contribution_bg"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_small"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_104"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_use_contribution_head_bg"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@color/transparent">

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/icon_white_return" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_title_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:text="用户榜"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/tv_title_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_54"
                android:layout_toRightOf="@id/tv_title_1"
                android:gravity="center_vertical"
                android:text="主播榜"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_11" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="@dimen/dp_263"
        android:layout_height="@dimen/dp_27"
        android:layout_below="@id/ll_1"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/icon_type_bg"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="@dimen/dp_88"
            android:layout_height="match_parent"
            android:background="@drawable/bg_day_btn"
            android:gravity="center"
            android:text="日榜"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="@dimen/dp_88"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_1"
            android:gravity="center"
            android:text="周榜"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="@dimen/dp_88"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_2"
            android:gravity="center"
            android:text="月榜"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13" />
    </RelativeLayout>

</RelativeLayout>