        </RelativeLayout>
        <TextView android:textSize="@dimen/sp_12" android:textColor="@color/white" android:gravity="center" android:background="@drawable/bg_live_room_base_info" android:layout_width="fill_parent" android:layout_height="@dimen/dp_80" android:text="@string/str_anchor_live_yet" />
    </LinearLayout>
</RelativeLayout>