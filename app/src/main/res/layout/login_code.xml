<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/titlebar_title_layout" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_34"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_reset_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="@string/prompt_email"
            android:inputType="phone"
            android:selectAllOnFocus="true"
            android:textColor="@color/blackColor"
            android:textColorHint="@color/color_666"
            android:textSize="@dimen/sp_18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            layout="@layout/line"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/qb_px_2" />

        <include
            android:id="@+id/ones_password"
            layout="@layout/super_edit_text" />

        <include
            layout="@layout/line"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/qb_px_2" />

        <include
            android:id="@+id/again_password"
            layout="@layout/super_edit_text" />

        <include
            layout="@layout/line"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/qb_px_2" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_reset_code"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_weight="1.0"
                android:background="@color/white"
                android:hint="@string/str_reset_code"
                android:inputType="textPassword"
                android:selectAllOnFocus="true"
                android:textColor="@color/blackColor"
                android:textColorHint="@color/color_666"
                android:textSize="@dimen/sp_18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_reset_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_login_code"
                android:textColor="@color/tabSelectTextColor"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <include
            layout="@layout/line"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/qb_px_2" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_21"
            android:background="@drawable/bg_not_btn"
            android:gravity="center"
            android:text="@string/str_reset_comit"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
</LinearLayout>