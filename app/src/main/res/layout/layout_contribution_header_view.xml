<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_178"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/dp_15"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="@dimen/dp_59"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_crown_1"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_7"
                android:src="@mipmap/icon_crown_2" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_crown_1"
                android:layout_width="@dimen/dp_59"
                android:layout_height="@dimen/dp_59"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/bg_contribution_crown_1"
                android:padding="@dimen/dp_2"
                android:scaleType="fitXY"
                fresco:actualImageScaleType="centerCrop"
                fresco:fadeDuration="300"
                fresco:placeholderImage="@mipmap/head_empty"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:roundAsCircle="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_user_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                android:ellipsize="end"
                android:maxEms="5"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_11"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_user_level_1"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_14"
                android:layout_below="@id/rl_1"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_toRightOf="@id/tv_user_name_1"
                android:background="@drawable/bg_red_rount_btn"
                android:drawableLeft="@mipmap/live_icon_user_level"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_2"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_8"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_hot_count_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_name_1"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_host_type_1"
            android:layout_width="@dimen/dp_61"
            android:layout_height="@dimen/dp_26"
            android:layout_below="@id/tv_hot_count_1"
            android:layout_marginTop="@dimen/dp_3"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/dp_74"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_crown_2"
                android:layout_width="@dimen/dp_33"
                android:layout_height="@dimen/dp_24"
                android:layout_alignLeft="@id/sdv_crown_2"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_1"
                android:src="@mipmap/icon_crown_1" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_crown_2"
                android:layout_width="@dimen/dp_74"
                android:layout_height="@dimen/dp_74"
                android:layout_marginTop="@dimen/dp_19"
                android:background="@drawable/bg_contribution_crown_2"
                android:padding="@dimen/dp_2"
                android:scaleType="fitXY"
                fresco:actualImageScaleType="centerCrop"
                fresco:fadeDuration="300"
                fresco:placeholderImage="@mipmap/head_empty"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:roundAsCircle="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_user_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sdv_crown_2"
                android:layout_marginTop="@dimen/dp_5"
                android:ellipsize="end"
                android:maxEms="5"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_11"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_user_level_2"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_14"
                android:layout_below="@id/sdv_crown_2"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toRightOf="@id/tv_user_name_2"
                android:background="@drawable/bg_red_rount_btn"
                android:drawableLeft="@mipmap/live_icon_user_level"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_2"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_8"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_hot_count_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_name_2"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_host_type_2"
            android:layout_width="@dimen/dp_61"
            android:layout_height="@dimen/dp_26"
            android:layout_below="@id/tv_hot_count_2"
            android:layout_marginTop="@dimen/dp_3"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingRight="@dimen/dp_15"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="@dimen/dp_59"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/iv_crown_3"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_20"
                android:layout_alignLeft="@id/sdv_crown_3"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_7"
                android:src="@mipmap/icon_crown_3" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_crown_3"
                android:layout_width="@dimen/dp_59"
                android:layout_height="@dimen/dp_59"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/bg_contribution_crown_3"
                android:padding="@dimen/dp_2"
                android:scaleType="fitXY"
                fresco:actualImageScaleType="centerCrop"
                fresco:fadeDuration="300"
                fresco:placeholderImage="@mipmap/head_empty"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:roundAsCircle="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_user_name_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sdv_crown_3"
                android:layout_marginTop="@dimen/dp_7"
                android:ellipsize="end"
                android:maxEms="5"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_11"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_user_level_3"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_14"
                android:layout_below="@id/sdv_crown_3"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_toRightOf="@id/tv_user_name_3"
                android:background="@drawable/bg_red_rount_btn"
                android:drawableLeft="@mipmap/live_icon_user_level"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_2"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_8"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_hot_count_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_host_type_3"
            android:layout_width="@dimen/dp_61"
            android:layout_height="@dimen/dp_26"
            android:layout_below="@id/tv_hot_count_3"
            android:layout_marginTop="@dimen/dp_3"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>