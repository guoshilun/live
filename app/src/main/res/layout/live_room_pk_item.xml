<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_107">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_header"
        android:layout_width="@dimen/dp_63"
        android:layout_height="@dimen/dp_63"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_26"
        android:scaleType="fitXY"
        fresco:actualImageScaleType="centerCrop"
        fresco:fadeDuration="300"
        fresco:placeholderImage="@mipmap/app_default_middle"
        fresco:roundAsCircle="true" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_toRightOf="@id/sdv_header"
        android:text="随机PK"
        android:textColor="@color/color_646464"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@id/sdv_header"
        android:text="与神秘人对战，更刺激！"
        android:textColor="@color/color_969696"
        android:textSize="@dimen/sp_10" />


    <TextView
        android:id="@+id/tv_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_desc"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_toRightOf="@id/sdv_header"
        android:text="接受随机匹配PK"
        android:textColor="@color/color_969696"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/tv_add"
        android:layout_width="@dimen/dp_67"
        android:layout_height="@dimen/dp_31"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_27"
        android:background="@drawable/bg_pk_btn"
        android:gravity="center"
        android:text="快速加入"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/cb_select"
        android:layout_width="@dimen/dp_39"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toRightOf="@id/tv_sign"
        android:background="@null"
        android:button="@drawable/cbox_pk_type_selector" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@color/color_E6E6E6" />
</RelativeLayout>