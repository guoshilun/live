<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80">


    <TextView
        android:id="@+id/tv_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:text="01"
        android:textColor="@color/color_FFA723"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rl_win_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_rank">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_header"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_58"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:padding="@dimen/dp_2"
            android:scaleType="fitXY"
            fresco:actualImageScaleType="centerCrop"
            fresco:fadeDuration="300"
            fresco:placeholderImage="@mipmap/icon_pk_seek_header_emply"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundAsCircle="true" />

        <ImageView
            android:id="@+id/iv_rank_crown"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_22"
            android:layout_alignLeft="@id/sdv_header"
            android:src="@mipmap/icon_crown_1"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_rank_mvp"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_16"
            android:layout_alignBottom="@id/sdv_header"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/icon_pk_mvp"
            android:visibility="gone" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_toRightOf="@id/rl_win_header"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dsfsdfsdfsdf"
            android:textColor="@color/color_646464"
            android:textSize="@dimen/sp_11"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_user_level"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_14"
            android:layout_below="@id/tv_name"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_9"
            android:background="@drawable/bg_blue_btn"
            android:drawableLeft="@mipmap/live_icon_user_level"
            android:gravity="center"
            android:text="246"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_8" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_33"
        android:drawableLeft="@mipmap/live_icon_gift_diamond"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center"
        android:text="0.00"
        android:textColor="@color/color_009BEF"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_63"
        android:layout_marginRight="@dimen/dp_26"
        android:background="@color/color_DCDCDC" />
</RelativeLayout>