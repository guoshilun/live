<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_259"
    android:background="@drawable/bg_wheat_dialog_round_white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:background="@mipmap/icon_wheat_dialog_top"
        android:gravity="center"
        android:text="连    麦"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_1"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:src="@drawable/bg_wheat_icon"
        android:layout_toLeftOf="@id/iv_2"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"/>

    <ImageView
        android:id="@+id/iv_2"
        android:scaleType="fitXY"
        android:layout_toLeftOf="@id/iv_3"
        android:layout_centerVertical="true"
        android:src="@drawable/bg_wheat_icon"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"/>

    <ImageView
        android:id="@+id/iv_3"
        android:scaleType="fitXY"
        android:layout_toLeftOf="@id/sdv_wheat"
        android:layout_centerVertical="true"
        android:src="@drawable/bg_wheat_icon"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"/>

    <ImageView
        android:id="@+id/iv_4"
        android:scaleType="fitXY"
        android:layout_toRightOf="@id/sdv_wheat"
        android:layout_centerVertical="true"
        android:src="@drawable/bg_wheat_icon"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"/>

    <ImageView
        android:id="@+id/iv_5"
        android:scaleType="fitXY"
        android:layout_toRightOf="@id/iv_4"
        android:layout_centerVertical="true"
        android:src="@drawable/bg_wheat_icon"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"/>

    <ImageView
        android:id="@+id/iv_6"
        android:scaleType="fitXY"
        android:layout_toRightOf="@id/iv_5"
        android:layout_centerVertical="true"
        android:src="@drawable/bg_wheat_icon"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_wheat"
        android:layout_width="@dimen/dp_78"
        android:layout_height="@dimen/dp_44"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        fresco:actualImageScaleType="centerCrop"
        fresco:fadeDuration="300"
        fresco:placeholderImage="@mipmap/app_default_middle"
        fresco:placeholderImageScaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_agree"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_18"
        android:text="180s"
        android:textColor="@color/color_969696"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_agree"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_42"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_27"
        android:background="@drawable/bg_wheat_btn_round_blue"
        android:gravity="center"
        android:text="申请连麦"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_13" />
</RelativeLayout>