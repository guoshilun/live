<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar_title_layout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_F1F5F8" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="vertical">

        <com.jk.jkproject.ui.widget.DrawerItemView
            android:id="@+id/div_account_binding"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <com.jk.jkproject.ui.widget.DrawerItemView
            android:id="@+id/div_alerts"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <com.jk.jkproject.ui.widget.DrawerItemView
            android:id="@+id/div_auto_reply"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <com.jk.jkproject.ui.widget.DrawerItemView
            android:id="@+id/div_clear_cache"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <com.jk.jkproject.ui.widget.DrawerItemView
            android:id="@+id/div_feedback"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <com.jk.jkproject.ui.widget.DrawerItemView
            android:id="@+id/div_blacklist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <com.jk.jkproject.ui.widget.DrawerItemView
            android:id="@+id/div_introduce"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_return_login"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/bg_acc_exit_btn"
            android:gravity="center"
            android:text="@string/str_return_login"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
</LinearLayout>