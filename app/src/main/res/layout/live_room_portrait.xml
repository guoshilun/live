            <ImageView android:id="@+id/iv_portrait_barrage" android:layout_width="@dimen/dp_24" android:layout_height="@dimen/dp_24" android:layout_marginLeft="@dimen/dp_16" android:src="@mipmap/icon_live_room_open_barrage" android:layout_toRightOf="@id/iv_portrait_stop" />
            <ImageView android:id="@+id/iv_portrait_switch_screens" android:layout_width="@dimen/dp_24" android:layout_height="@dimen/dp_24" android:layout_marginLeft="@dimen/dp_16" android:layout_marginRight="@dimen/dp_7" android:src="@mipmap/icon_live_room_switch_screens" android:layout_toRightOf="@id/iv_portrait_barrage" />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_anchor_live_yet_portrait" android:visibility="gone" android:layout_width="@dimen/dp_214" android:layout_height="@dimen/dp_122" android:layout_centerInParent="true">
