<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/live_room_bottom"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dp_45"
    android:background="@color/transparent"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/et_bottom"
        android:layout_width="@dimen/dp_123"
        android:layout_height="@dimen/dp_34"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/corners_white_5dp"
        android:drawableLeft="@mipmap/icon_live_room_face"
        android:drawablePadding="@dimen/dp_3"
        android:gravity="center|left"
        android:enabled="false"
        android:hint="@string/live_room_msg_hint_for_broadcast_unopen"
        android:textColorHint="@color/white"
        android:maxLength="50"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15" />

    <LinearLayout
        android:id="@+id/linear_other"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_8"
        android:gravity="center|right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_game_gold"
            android:layout_width="@dimen/dp_34"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/game" />

        <ImageView
            android:id="@+id/iv_skin_care"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/live_icon_room_skin_care" />

        <ImageView
            android:id="@+id/iv_host_pk"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/icon_live_host_pk" />

        <ImageView
            android:id="@+id/ic_mail"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/live_icon_room_mail" />

        <ImageView
            android:id="@+id/iv_gift"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/gift" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/live_icon_room_share" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/live_icon_room_close" />
    </LinearLayout>
</RelativeLayout>