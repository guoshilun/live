<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_333"
    android:layout_height="@dimen/dp_300">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_40"
        android:scaleType="fitXY"
        android:src="@drawable/bg_pk_dialog_round_white" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_40"
        android:scaleType="fitXY"
        android:src="@drawable/bg_pk_dialog_top"
        android:visibility="visible" />

    <ImageView
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_85"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_game_gold_positive"
        android:visibility="visible" />

    <ImageView
        android:layout_width="@dimen/dp_273"
        android:layout_height="@dimen/dp_126"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_100"
        android:src="@mipmap/icon_game_gold_hint_bg"
        android:visibility="visible" />


    <TextView
        android:id="@+id/iv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_pk_dialog_round_gary"
        android:gravity="center"
        android:text="关  闭"
        android:textColor="@color/color_FF5959"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold" />
</RelativeLayout>