<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/video_item"
    android:layout_width="@dimen/dp_157"
    android:layout_height="@dimen/dp_93"
    android:layout_marginRight="@dimen/dp_11"
    android:background="@mipmap/icon_round_white_bg"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_agenda_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="英雄联盟"
            android:textColor="@color/color_6F8AFF"
            android:textSize="@dimen/sp_10" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_left_header"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            fresco:actualImageScaleType="centerCrop"
            fresco:fadeDuration="300"
            fresco:placeholderImage="@mipmap/app_default_middle"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:maxLength="9"
            android:singleLine="true"
            android:text="梦回长安"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/text_10sp" />

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_vs" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_video"
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_11"
                android:src="@drawable/icon_not_video" />

            <TextView
                android:id="@+id/tv_video"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_14"
                android:text="直播中"
                android:textColor="@color/tabSelectTextColor"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_right_header"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            fresco:actualImageScaleType="centerCrop"
            fresco:fadeDuration="300"
            fresco:placeholderImage="@mipmap/app_default_middle"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/tv_right_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:maxLength="9"
            android:singleLine="true"
            android:text="梦回长安"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/text_10sp" />
    </RelativeLayout>
</LinearLayout>