<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_301"
    android:layout_height="@dimen/dp_145"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@drawable/bg_white_balance">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_27"
        android:layout_marginBottom="@dimen/dp_26"
        android:maxLines="2"
        android:gravity="center"
        android:text="提示提示提示提示提示提示提示提示提示提示提示提示提示提示提示提示提示提示提示"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_below="@id/tv_1"
        android:background="@drawable/bg_line" />


    <TextView
        android:id="@+id/tv_top_up"
        android:layout_width="@dimen/dp_112"
        android:layout_height="@dimen/dp_30"
        android:layout_below="@id/line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:text="我知道了"
        android:textColor="@color/color_0390FC"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />
</RelativeLayout>