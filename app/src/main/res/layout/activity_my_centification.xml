<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar_title_layout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@drawable/bg_line" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/bg_et_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/str_name_hint"
            android:maxLength="5"
            android:paddingLeft="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="@color/color_333"
            android:textColorHint="@color/color_999"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv_clear_name"
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_19"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/icon_login_close"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/bg_et_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_id_card_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/str_id_card_hint"
            android:paddingLeft="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="@color/color_333"
            android:textColorHint="@color/color_999"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv_clear_card"
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_19"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/icon_login_close"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_35"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_id_card_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_id_card_pic"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_16"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_id_pic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_id_card_pic">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_id_card_positive"
                    android:layout_width="@dimen/dp_104"
                    android:layout_height="@dimen/dp_85"
                    android:layout_weight="1.0"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_id_card_positive" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="身份证正面照"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/dp_17"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_id_card_reverse"
                    android:layout_width="@dimen/dp_104"
                    android:layout_height="@dimen/dp_85"
                    android:layout_weight="1.0"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_id_card_positive" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="身份证反面照"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/dp_17"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_id_card_handheld"
                    android:layout_width="@dimen/dp_104"
                    android:layout_height="@dimen/dp_85"
                    android:layout_weight="1.0"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_id_card_positive" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="手持身份证照"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/bg_centification_btn"
        android:gravity="center"
        android:text="@string/str_centification"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_ok"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/icon_un_agree" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_1"
            android:text="@string/str_read"
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_login_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_jinkuo"
            android:textColor="@color/color_D83FDD"
            android:textSize="12.0sp" />
    </LinearLayout>


</LinearLayout>