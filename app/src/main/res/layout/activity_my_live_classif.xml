<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <include layout="@layout/titlebar_title_layout" />

    <TextView
        android:id="@+id/tv_classif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_60"
        android:text="@string/str_live_classif"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_classifs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_15"
        android:text="@string/str_live_classif"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_hot_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_classif"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:text="@string/str_hot_game"
        android:textColor="@color/tabSelectTextColor"
        android:textSize="@dimen/sp_16" />

    <com.jk.jkproject.ui.widget.flowlayout.TagFlowLayout
        android:id="@+id/rv_game_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hot_game"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_14" />

    <TextView
        android:id="@+id/tv_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_game_type"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_15"
        android:text="@string/str_other"
        android:textColor="@color/tabSelectTextColor"
        android:textSize="@dimen/sp_16"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/et_game_name"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_below="@id/tv_other"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/bg_white_btn"
        android:gravity="center_vertical"
        android:hint="@string/str_game_name"
        android:maxLength="6"
        android:minLines="1"
        android:paddingLeft="@dimen/dp_5"
        android:textColor="#ff666666"
        android:textColorHint="@color/color_999"
        android:textSize="16.0sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="@dimen/dp_223"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/et_game_name"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_38"
        android:background="@drawable/bg_red_btn"
        android:gravity="center"
        android:text="@string/str_ok"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>